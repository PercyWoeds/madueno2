<p id="notice"><%= notice %></p>

<h1>Listing Customer Contratos</h1>

<table>
  <thead>
    <tr>
      <th>Customer</th>
      <th>Sec.Contr</th>
      <th>Medio</th>
      <th>Contrato</th>
      <th>Anio</th>
      <th>Referencia</th>
      <th>Moneda</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @customer_contratos.each do |customer_contrato| %>
      <tr>
        <td><%= customer_contrato.customer.name  %></td>
        <td><%= customer_contrato.secu_cont %></td>
         <% if customer_contrato.medio.nil? %> 
            <td><%= customer_contrato.medio_id %> </td>
        <% else %>
            <td><%= customer_contrato.medio.descrip %></td>
        <% end %>
         <% if customer_contrato.code.nil? %> 
          <td><%= customer_contrato.code %> </td>
        <% else %>
            <td><%= customer_contrato.contrato.code %></td>
        <% end %>
       

        <td><%= customer_contrato.anio %></td>
        <td><%= customer_contrato.referencia %></td>
        <td><%= customer_contrato.moneda_id %></td>
        <td><%= link_to 'ver', customer_contrato %></td>
        <td><%= link_to 'Editar', edit_customer_contrato_path(customer_contrato) %></td>
        <td><%= link_to 'Eliminar', customer_contrato, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


<%= link_to 'New Customer contrato', new_customer_contrato_path %>



<h2>Importar Archivo clientes contratos "*.csv"</h2>

<%= form_tag import_customer_contratos_path, multipart: true do %>
  <%= file_field_tag :file %>
  <%= submit_tag "Importar " %>
<% end %>


