                 <%if @current_user.level == "admin2" || @current_user.level == "admin1" || @current_user.level == "admin"   || @current_user.level == "planner"%> 

                    <div class="item item-purple col-md-4 col-sm-6 col-xs-6">
                        <div class="item-inner">
                            <div class="icon-holder">
                                <span aria-hidden="true" class="icon icon_lifesaver"></span>
                            </div><!--//icon-holder-->
                            <h3 class="title">Contratos de Publicidad</h3>
                            <p class="intro">Contratos de publicidad</p>
                            <%= link_to "", "/companies/contratos/#{@company.id}", class: "link" %><span></span></a>
                        </div><!--//item-inner-->
                    </div><!--//item-->
                    <% end %>


                

            <%if @current_user.level == "compras" || @current_user.level == "admin" || @current_user.level == "admin1"%> 

                        <div class="item item-green col-md-4 col-sm-6 col-xs-6">
                            <div class="item-inner">
                                <div class="icon-holder">
                                    <i class="icon fa fa-paper-plane"></i>
                                </div><!--//icon-holder-->
                                <h3 class="title">Compras </h3>
                                <p class="intro">Registro de compras del sistema</p>
                                <%= link_to "", "/companies/start/#{@company.id}", class: "link" %>
                                 <span></span>

                                
                            </div><!--//item-inner-->
                        </div><!--//item-->

                    <% end %>


                    <%if @current_user.level == "admin1" || @current_user.level == "admin"%> 

                    <div class="item item-purple col-md-4 col-sm-6 col-xs-6">
                        <div class="item-inner">
                            <div class="icon-holder">
                                <span aria-hidden="true" class="icon icon_lifesaver"></span>
                            </div><!--//icon-holder-->
                            <h3 class="title">Ventas</h3>
                            <p class="intro">Registro de facturación y notas</p>
                            <%= link_to "", "/companies/faqs/#{@company.id}", class: "link" %><span></span></a>
                        </div><!--//item-inner-->
                    </div><!--//item-->
                    <% end %>
  
                    <%if @current_user.level == "admin1" || @current_user.level == "admin" || @current_user.level == "admin2"%> 

                    <div class="item item-pink item-2 col-md-4 col-sm-6 col-xs-6">
                        <div class="item-inner">
                            <div class="icon-holder">
                                <span aria-hidden="true" class="icon icon_puzzle_alt"></span>
                            </div><!--//icon-holder-->
                            <h3 class="title">Administracion </h3>
                                <p class="intro">Administracion  del sistema</p>
                                <a><%= link_to "", "/companies/cadmin/#{@company.id}", class: "link" %><span></span></a>
                        </div><!--//item-inner-->
                     </div><!--//item-->
                    <% end %>
                    
                    <%if @current_user.level == "admin1" || @current_user.level == "admin"%> 

                     <div class="item item-orange col-md-4 col-sm-6 col-xs-6">
                        <div class="item-inner">
                            <div class="icon-holder">
                                <span aria-hidden="true" class="icon icon_gift"></span>
                            </div><!--//icon-holder-->
                            <h3 class="title">Cuentas por cobrar </h3>
                                <p class="intro">Cuentas por cobrar cliente del sistema</p>
                                <a><%= link_to "", "/companies/ccobrar/#{@company.id}", class: "link" %><span></span></a>
                        </div><!--//item-inner-->
                     </div><!--//item-->
                    <% end %>


                    <%if @current_user.level == "admin1" || @current_user.level == "admin"%> 

                    <div class="item item-purple col-md-4 col-sm-6 col-xs-6">                
                            <div class="item-inner">
                                <div class="icon-holder">
                                    <span aria-hidden="true" class="icon icon_genius"></span>
                                </div><!--//icon-holder-->
                                <h3 class="title">Cuentas por pagar </h3>
                                <p class="intro">Cuentas por pagar proveedores </p>
                                <a><%= link_to "", "/companies/cpagar/#{@company.id}", class: "link" %><span></span></a>
                            </div><!--//item-inner-->
                    </div><!--//item-->

                    <% end %>

                 <%if @current_user.level == "admin2" || @current_user.level == "admin1" || @current_user.level == "admin" || @current_user.level == "planner"%> 

                    <div class="item item-purple col-md-4 col-sm-6 col-xs-6">
                        <div class="item-inner">
                            <div class="icon-holder">
                                <span aria-hidden="true" class="icon icon_lifesaver"></span>
                            </div><!--//icon-holder-->
