<p id="notice"><%= notice %></p>

<h1>Listing Services</h1>

<table>
  <thead>
    <tr>
      <th>Codigo</th>
      <th>Nombre</th>
      <th>Tax1 name</th>
      <th>Tax1</th>
      <th>Cuenta</th>
      <th>Company</th>      
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @services.each do |service| %>
      <tr>
        <td><%= service.code %></td>
        <td><%= service.name %></td>
        <td><%= service.tax1_name %></td>
        <td><%= service.tax1 %></td>
        <td><%= service.cuenta %></td>
        <td><%= service.company_id %></td>
        <td><%= link_to 'Ver', service %></td>
        <td><%= link_to 'Editar', edit_service_path(service) %></td>
         <%     if current_user.level != "admin"  %>

        <td><%= link_to 'Eliminar', service, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nuevo Servicio', new_service_path %>
